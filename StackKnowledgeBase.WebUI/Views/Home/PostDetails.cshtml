@model List<PostDetailsModel>;

@{
    ViewData["Title"] = "PostDetailsView";
}

<div class="container border">
    <div class="d-flex flex-row justify-content-between mt-2">
        <div class="fs-6 mb-2">Post ID: @Model[0].Id</div>
        <a href="javascript:history.go(-1)">Back to search results</a>
    </div>

    @if (Model.Count > 0)
    {
        @foreach (var obj in Model)
        {
            @if (obj.PostTypeId == 1)
            {
                <div class="row">
                    <div class="fs-6"><strong>@Html.Raw(obj.Title)</strong></div>
                    <div class="fs-6">@Html.Raw(obj.Body)</div>
                    <div class="d-flex justify-content-start fst-italic">
                        <small style="color: #adb5bd">
                            question by: <span class="text-info">@obj.DisplayName</span>
                        </small>
                        <small class="ms-2" style="color: #adb5bd">
                            date posted: <span class="text-info">@obj.CreationDate</span>
                        </small>
                    </div>
                    <hr class="mt-2">
                </div>
            }
            else
            {
                <div class="row ms-lg-4 ms-md-3 ms-2">
                    <div class="fw-light"><strong>@Html.Raw(obj.Title)</strong></div>
                    <div class="fw-light">@Html.Raw(obj.Body)</div>
                    <div class="d-flex flex-column flex-sm-row justify-content-end fst-italic">
                        <small style="color: #adb5bd">
                            answered by: <span class="text-info">@obj.DisplayName</span>
                        </small>
                        <small class="ms-sm-2" style="color: #adb5bd">
                            date posted: <span class="text-info">@obj.CreationDate</span>
                        </small>
                    </div>
                    <hr class="mt-2">
                </div>
            }
        }
    }
    <div class="row text-center">
        <a href="javascript:history.go(-1)">Back to search results</a>
    </div>
    <br />
</div>
